<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="100" styleClass="root" stylesheets="@Login.css" vgap="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.exercice8.LoginControl">
    <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="User Id:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

<!--   à compléter par un TextField et un Label -->

   <PasswordField fx:id="pwd" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Label text="Password:" GridPane.rowIndex="2" />
   <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <Button mnemonicParsing="false" onAction="#cancelClicked" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   <Button alignment="CENTER" mnemonicParsing="false" onAction="#okClicked" text="Ok" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets left="65.0" />
      </GridPane.margin></Button>

<!--  à compléter pour les boutons -->

   <columnConstraints>
      <ColumnConstraints maxWidth="125.0" minWidth="63.0" prefWidth="103.0" />
      <ColumnConstraints maxWidth="143.0" minWidth="81.0" prefWidth="103.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" />
   </padding>
</GridPane>
